doctype html
html
  head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    style.
      body {
        font-family: sans-serif;
        font-size: 12px;
        color: #222;
        margin: 0;
        padding: 0;
        background: #fff;
      }
      .col { float: left; }
      .col-24 { width: 100%; }
      .col-12 { width: 50%; }
      .clearfix { clear: both; }
      .top-area { width: 100%; padding: 20px; }
      .logo { width: 150px; }
      .company-info { text-align: right; font-size: 12px; }
      .title {
        font-size: 28px;
        color: #52008c;
        font-weight: bold;
        margin: 20px 0 10px;
      }
      .label { font-weight: bold; margin-bottom: 4px; }
      .block { margin-bottom: 20px; }
      .info-box { margin-top: 30px; }
      .status-tag {
        display: inline-block;
        padding: 2px 10px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: bold;
        border: 1px solid transparent;
      }
      .status-Open {
        background: #e6f7ff;
        color: #1890ff;
        border-color: #91d5ff;
      }
      .status-Closed {
        background: #f6ffed;
        color: #52c41a;
        border-color: #b7eb8f;
      }
      .status-InProgress {
        background: #fffbe6;
        color: #faad14;
        border-color: #ffe58f;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        padding: 10px;
        border-bottom: 1px solid #eee;
        text-align: left;
      }
      th {
        background: #f4f4f4;
        color: #52008c;
        font-weight: bold;
      }
      .footer-invoice {
        margin-top: 50px;
        text-align: center;
        font-size: 10px;
        color: #999;
      }

  body
    .top-area
      img.logo.left(src=settings.public_server_file + settings.company_logo)
      .right.company-info
        p.strong #{settings.company_name}
        p #{settings.company_address}
        p #{settings.company_reg_number}
    .clearfix

    .col.col-24
      .title #{translate('query')}

    .col.col-12
      .block
        p.label #{translate('Created Date')}:
        p #{moment(model.createdAt).format(dateFormat)}

      .block
        p.label #{translate('Status')}:
        span(class="status-tag status-" + model.status)= model.status

    .col.col-12
      .billTo
        p.label #{translate('Customer')}:
        p #{model.client.name}
        p #{model.client.address}
        p #{model.client.phone}
        p #{model.client.email}
    .clearfix

    .info-box
      table
        thead
          tr
            th #{translate('Description')}
            th #{translate('Resolution')}
        tbody
          tr
            td #{model.description}
            td #{model.resolution}

    .col.col-24
        .space     
    footer.footer-invoice
